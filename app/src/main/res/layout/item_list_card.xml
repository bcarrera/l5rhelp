<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_card_mon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="A Fate Worse Than Death"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_card_mon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_card_clan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:text="Scorpion"
        app:layout_constraintStart_toEndOf="@+id/item_card_mon"
        app:layout_constraintTop_toBottomOf="@+id/item_card_name" />

    <TextView
        android:id="@+id/item_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="Event"
        app:layout_constraintStart_toEndOf="@+id/item_card_clan"
        app:layout_constraintTop_toBottomOf="@+id/item_card_name" />

    <TextView
        android:id="@+id/item_card_deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="Event"
        app:layout_constraintStart_toEndOf="@+id/item_card_type"
        app:layout_constraintTop_toBottomOf="@+id/item_card_name" />

</android.support.constraint.ConstraintLayout>